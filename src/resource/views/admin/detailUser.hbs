                                                <input type="text" class="form-control" id="val-username" name="UserName" value="{{data.UserName}}" >
                                            </div>
                                        </div>
                                      

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-confirm-password">Address<span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" id="val-confirm-password" name="Address" value="{{data.Address}}" >
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-confirm-password">PhoneNumber<span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" id="val-confirm-password" name="PhoneNumber" value="{{data.PhoneNumber}}" >
                                            </div>
                                        </div>

    

                                        <div class="form-group row">
